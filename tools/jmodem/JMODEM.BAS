500 FOR I=3 TO SBUF(2)+2:FILENAME$=FILENAME$+CHR$(SBUF(I)):NEXT I
530 SIZE = CVI(CHR$(SBUF(SBUF(2)+3))+CHR$(SBUF(SBUF(2)+4)))
540 PRINT "Receiving '"FILENAME$"' ("SIZE" bytes)...";
